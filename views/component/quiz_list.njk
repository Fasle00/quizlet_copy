{% macro qList(quizes) %}
<div class="row row-cols-md-4 gx-3 gy-3">
	{% for quiz in quizes -%}
	<div class="col">
		<div class="card h-100">
			<div class="card-header">
				<a href="/quiz/{{quiz.id}}">{{quiz.name}}</a>
			</div>
			<div class="card-body">
				{{quiz.description}}
			</div>
			<div class="card-footer">{{quiz.username}}</div>
		</div>
	</div>
	{%- endfor %}
</div>
{% endmacro %}
